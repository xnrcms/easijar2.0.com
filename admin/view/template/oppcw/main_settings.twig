{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-settings" data-toggle="tooltip"
					title="{{ button_save }}" class="btn btn-primary">
					<i class="fa fa-save"></i>
				</button>
				<a href="{{ cancel |raw }}" data-toggle="tooltip"
					title="{{ button_cancel }}" class="btn btn-default"><i
					class="fa fa-reply"></i></a>
				<a href="{{ more_link | raw }}"  data-toggle="tooltip" class="btn btn-default" title="{{ OPPCw_Translate('More') }}"><i class="fa fa-plus-square"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
			{%  for breadcrumb in breadcrumbs %}
            		<li><a href="{{ breadcrumb['href'] | raw }}">{{ breadcrumb['text'] }}</a></li>
        	{% endfor %}
      </ul>
		</div>
	</div>
	<div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger">
			<i class="fa fa-exclamation-circle"></i>{{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
    {% endif %}
    <div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-pencil"></i>{{ text_edit }}</h3>
			</div>
			<div class="panel-body">
			{{ tabs }}
			
			<form action="{{ action | raw }}" method="post"
					enctype="multipart/form-data" id="form-settings" class="form-horizontal">
				{{ form }}
			</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}
